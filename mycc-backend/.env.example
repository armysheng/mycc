# 数据库配置
DATABASE_URL=postgresql://mycc:mycc_dev_password@localhost:5432/mycc_dev

# Redis 配置
REDIS_URL=redis://localhost:6379

# JWT 配置
JWT_SECRET=your_jwt_secret_change_in_production

# 服务器配置
PORT=8080
NODE_ENV=development

# Claude API
ANTHROPIC_API_KEY=sk-ant-xxx

# 套餐配置
PLAN_FREE_TOKENS=10000
PLAN_BASIC_TOKENS=100000
PLAN_PRO_TOKENS=500000

# 并发限制
MAX_CONCURRENT_USERS=20
MAX_CONCURRENT_PER_USER=1

# VPS SSH 配置
VPS_HOST=your-vps-ip
VPS_SSH_PORT=22
VPS_SSH_USER=root
VPS_SSH_KEY_PATH=/path/to/ssh/private/key
VPS_SSH_MAX_CONNECTIONS=5
VPS_SSH_READY_TIMEOUT_MS=30000
VPS_SSH_FORCE_IPV4=true
VPS_SSH_KEEPALIVE_INTERVAL_MS=10000
VPS_SSH_KEEPALIVE_COUNT_MAX=3
